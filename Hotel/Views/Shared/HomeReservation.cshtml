<section class="content-wrapper">
    <div class="homeReservation-wrapper">
        <div class="homeReservation float-right">
            <div class="homeReservationTitle" style="padding-top:25px; padding-bottom:12px;">
                Reservaciones
            </div>

            <div style="padding:5px;">
                @using (Html.BeginForm()) {
                    <table border="0" style="width:90%; margin:auto">
                        <tr>
                            <td class="formLabel" >Llegada</td>
                            <td class="formLabel" >Salida</td>
                        </tr>
                        <tr>
                            <td>
                                <label>
                                    @Html.TextBoxFor(model => model.CheckInDate, new { @class = "date" , id = "CheckInDate" })
                                </label>
                            </td>
                            <td>
                                <label>
                                    @Html.TextBoxFor(model => model.CheckOutDate, new { @class = "date" , id = "CheckOutDate" })
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:10px; padding-top:10px;" colspan="2">
                                <table border="0">
                                    <tr>
                                        <td class="formLabel" >No. de Adultos</td>
                                        @*<td class="formLabel">Kids<br>
                                        per room</td>
                                        <td class="formLabel">No.of rooms</td>*@
                                    </tr>
                                    <tr>
                                        <td>
                                            <label>
                                                @Html.DropDownListFor(model => model.NumGuests, new List<SelectListItem>{
                                                    new SelectListItem{Text="1", Value="1"},
                                                    new SelectListItem{Text="2", Value="2"},
                                                    new SelectListItem{Text="3", Value="3"},
                                                    new SelectListItem{Text="4", Value="4"}
                                                })
                                            </label>
                                        </td>
                                    @*<td><label>
                                    <select name="select4">
                                    <option>1</option>
                                    </select>
                                    </label></td>
                                    <td><label>
                                    <select name="select5">
                                    <option>2</option>
                                    </select>
                                    </label></td>*@
                                    </tr>
                              </table>
                          </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align:right">
                                <input type="submit" value="Buscar" />
                            </td>
                        </tr>
                        @*<tr>
                          <td ><label>
                            <input type="text" name="textfield">
                          </label></td>
